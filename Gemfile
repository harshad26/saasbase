source 'https://rubygems.org'

ruby '2.2.1'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.1'

# Use postgresql as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0.4'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'

# Use jquery as the JavaScript library
gem 'jquery-rails', '~> 4.1.0'

# Use devise for user authentication
gem 'devise', '~> 3.4.0'
gem 'devise_invitable', '~> 1.3.4'

# Use simple_from for form creation
gem 'simple_form', '~> 3.1.0'
gem 'country_select'

# Use apartment for multi tenants functionality
#gem 'apartment', '~> 0.24.3'

# Use bootstrap-sass for mobile first css
gem 'bootstrap-sass', '~> 3.3.6'

# Use font-awesome-sass for icons
gem 'font-awesome-sass', '~> 4.5.0'

# Use sprockets for assets pipeline pre-compilation
gem 'sprockets', '~> 3.0'

# Use paper_trail for audit trail
gem 'paper_trail', '~> 3.0.6'

# Use stripe for payment - subscription can be transfer in case of acquisition
gem 'stripe', '1.21'
gem 'protected_attributes'
# Use activeadmin for creating admin dashboards
#gem 'activeadmin', '~> 1.0.0.pre2'
gem 'will_paginate', '~> 3.1.1'

gem 'minitest', '5.5.0'
# gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'mysql2', '0.4.2'
gem 'econfig', require: 'econfig/rails'

