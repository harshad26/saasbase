<% unless @subscription.nil? || @subscription.errors.blank? %>
    <%= @subscription.errors.full_messages.to_sentence %>
<% end %>

<div class="row">
  <%= devise_error_messages! %>

  <div class="col-md-4 col-md-offset-3">
    <div class="authform">
      <%= form_for @user do |f| %>

          <h3>Create Your Free Account</h3>
          <br>
          <div class="form-group">
            <%= f.label "Email" %>
            <%= f.text_field :email, required: true, type: 'email', autofocus: true,
                             placeholder: "Your email", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label "Password" %>
            <%= f.text_field :password, required: true, type: 'password',
                             placeholder: "Your password", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label "Password Confirmation" %>
            <%= f.text_field :password_confirmation, required: true, type: 'password',
                             placeholder: "Confirm your password", class: 'form-control' %>
          </div>

          <div class="form-group">
            <label>Card Number</label>
            <input value="4242 4242 4242 4242" data-stripe="number" class="form-control" type="text" size="20" placeholder="Card Number"/>
          </div>

          <div class="form-group">
            <label>Card Verification Code</label>
            <input value="123" data-stripe="cvc" class="form-control" type="text" size="4" placeholder="Card Verification Code"/>
          </div>

          <div class="form-group">
            <label>Expiry Date</label>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <input value="11" data-stripe="exp_month" class="form-control" type="text" size="2" placeholder="MM" data-stripe="exp-month"/>
                </div>
              </div>

              <div class="col-sm-6">
                <div class="form-group">
                  <input value="2020" data-stripe="exp_year" class="form-control" type="text" size="4" placeholder="YYYY" data-stripe="exp-year"/>
                </div>
              </div>
            </div>
          </div>
          <div class="payment-errors-alert alert alert-danger">
            <div class="payment-errors"></div>
          </div>
          <input type="submit" name="commit" value="Sign Up!" class="button right">
      <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="what-next-panel panel panel-primary">
      <div class="panel-heading">What happens next?</div>
      <div class="panel-body">
        <ul>
          <li><i class="icon icon-thumbs-up"></i> Start your free trial</li>
          <li><i class="icon icon-thumbs-up"></i> Add our snippet to your site</li>
          <li><i class="icon icon-thumbs-up"></i> Add some locations</li>
          <li><i class="icon icon-thumbs-up"></i> Get help from our concierge</li>
          <li><i class="icon icon-thumbs-up"></i> Drive tons of in-store sales</li>
          <li><i class="icon icon-thumbs-up"></i> Your card will not be charged until after your 7 day free trial.</li>
          <li><i class="icon icon-thumbs-up"></i> Cancel any time if you're not happy</li>
        </ul>
      </div>
    </div>
  </div>
</div>
