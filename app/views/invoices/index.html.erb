<% content_for(:sidebar) do %>
    <%= render :partial => "layouts/sidebar" %>
<% end %>
<div class="row">
  <div class="col-md-8">

    <div class="panel panel-primary">
      <div class="panel-heading">Invoices</div>
      <div class="panel-body">
        <table class="table">
          <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @invoices.each do |invoice| %>
              <tr>
                <td><%= Time.at(invoice.date).strftime("%d-%m-%Y") %></td>
                <td><%= number_to_currency(invoice.amount_due) %></td>
                <td><a href="/invoices/<%= invoice.id %>">View</a></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>